pipeline {
    agent any

    tools {
        maven 'Maven 3.8.6'  // Cambia esto si tu versión de Maven es diferente
    }

    stages {
        stage('Clonar Repositorio') {
            steps {
                git 'https://github.com/MiltonEduardoHernandez/Infraestructura.git'  // Cambia esta URL a tu repo
            }
        }

        stage('Compilar') {
            steps {
                script {
                    sh 'mvn clean compile'
                }
            }
        }

        stage('Pruebas') {
            steps {
                script {
                    sh 'mvn test'
                }
            }
        }

        stage('Empaquetar') {
            steps {
                script {
                    sh 'mvn package'
                }
            }
        }

        stage('Construir Imagen Docker') {
            steps {
                script {
                    sh 'docker build -t my-prueba-app .'
                }
            }
        }

        stage('Desplegar Imagen Docker') {
            steps {
                script {
                    sh 'docker run -d -p 8080:8080 my-prueba-app'
                }
            }
        }
    }

    post {
        always {
            cleanWs() // Limpia el workspace después de que se complete el job
        }
    }
}
